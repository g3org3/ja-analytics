---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
    <script defer data-domain="analytics.jorgeadolfo.com" src="https://analytics.jorgeadolfo.com/script.js"></script>
	</head>
	<body class="h-full w-full flex flex-col font-mono dark:bg-slate-800 dark:text-white">
		<slot />
	</body>
</html>
