---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bitter:wght@400;500&display=swap" rel="stylesheet">
		<title>{title}</title>
    <script defer data-domain="analytics.jorgeadolfo.com" src="http://localhost:3000/script.js"></script>
	</head>
	<body class="h-full w-full flex flex-col font-mono dark:bg-slate-800 dark:text-white">
		<slot />
	</body>
</html>
